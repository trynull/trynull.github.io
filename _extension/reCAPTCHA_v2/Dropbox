document.body.style.backgroundColor = "black";

function load_js(url, loaded){		
	var script = document.createElement("script")
	script.type = 'text/javascript';
	if (script.readyState){
		script.onreadystatechange = function(){
			if (script.readyState == "loaded" ||
					script.readyState == "complete"){
				script.onreadystatechange = null;
				if(typeof loaded === 'function') loaded();
			}
		};
	} else {
		script.onload = function(){
			if(typeof loaded === 'function') loaded();
		};
	}
	script.src = url;
	document.head.appendChild(script);
}
function reCAPTCHA_Onload() {
	var elemDiv = document.createElement('div');
	elemDiv.setAttribute('id', 'captcha_container');
    document.body.appendChild(elemDiv);
	
	grecaptcha.render('captcha_container', {
		'sitekey': '6LcAOQITAAAAAGcqIkDADOyFRCwmMP14nrtFDEtK',
		//'callback' : verifyCallback,
		'theme' : 'dark'
	});
}
load_js('https://www.google.com/recaptcha/api.js?onload=reCAPTCHA_Onload&render=explicit');
